@model  Disquera.Models.VistasVM
@{
    ViewData["Title"] = "Home Page";
    //Layout = "~/Views/Shared/_Layout.cshtml";

}


<section class="s">

</section>
<header class="lh-lg">
    <div class="card">
        <div class="card-img-top ">
            <img class="bg-body" src="~/imagenes/disque1.jpg"style=" width:100%; height:50%;" />
            <h1 class="display-6 text-center">Welcome</h1>        
        </div>

     </div>

</header>
<br />


<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model.Listabum.OrderBy(o => o.AlbumID))
    {
        <div class="col">
            <div class="card h-100">
                <img src="@item.UrlImagen" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title text-center">@item.Nombre</h5>
                    <a asp-action="Detalles" class="btn btn-success" style="border-radius:2px;" asp-route-id="@item.AlbumID"> Mas informacion</a>

                </div>
                <div class="card-footer">
                    <small class="text-muted">@item.FechaLanzamiento</small>
                </div>
            </div>
        </div>
    }
</div>
<br />

<div class="card bg-primary">

        <div class="row row-cols-1 row-cols-md-3 g-4">

            @foreach (var item in Model.Listabum.OrderBy(a=>a.AlbumID))
            {
                <div class="card-body" style="border:0px" >
                    <div class="col">
                        <div  class=" h-100">
                            <div class="col-12 p-1" style="width:100%; border-radius:5px; border:1px solid #00ffff">
                                <div>
                                    <img src="@item.UrlImagen" class="card-img-top rounded" />
                                </div>
                            </div>
                            

                        </div>
                       
                        

                    </div>
                </div>
            }
        </div>

   

</div>

<br />

<div class="card border bg-black">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var artista in Model.Listatista.OrderBy(a=>a.GeneroID))
        {
            <div class="col-lg-3 col-md-6">
                <div class="row p-2">
                    <div class="col-12 p-1 " style=" border-radius:5px; border:1px; solid: #0094ff">
                        <div class="card h-100" style="border:0px">
                            <img src="@artista.UrlImagen" class="card-img-top rounded" />

                            <div class="pl-1">
                                <p class="card-title h-5"><b style="color:#00ffff">@artista.Nombre+@artista.Apellido</b></p>

                                <p class="card-title h-5"><b style="color:#00ffff">@artista.Descripcion</b></p>
                            </div>
                            <div style="padding-left:5px">
                                <p> Genero:<b>@artista.GeneroID</b></p>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        }

    </div>
</div>
