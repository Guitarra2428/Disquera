
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<br />
<div class="container">

    <div class="row">
        <div class="col">
            <h3>Lista De Albums</h3>
        </div>

        <div class="col-4">
            <a class="btn btn-success" asp-action="Create"> <i class="fas fa-plus"></i>Crear Nuevo Albums</a>
        </div>
    </div>

    <table class="table table-bordered  table-striped" id="tblalbums">
        <thead>
            
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Fecha Lanzamiento</th>
                <th>Artista</th>               
                <th>Imagen</th>
                <th>Options</th>

            </tr>
        </thead>
    </table>
</div>
@section Scripts{
    <script src="~/js/Albums.js"></script>


}

